{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Read",
      "Glob",
      "Grep",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(uv run:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "/opt/homebrew/bin/uv run --no-project ~/.claude/statusline.py"
  }
}
